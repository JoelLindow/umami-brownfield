<div class="row">
  <div class="col m3">
    <div class="card grey darken-1 large">
      <div class="card-content white-text">
        <h1>Username: <%= @user.name %></h1>
        <h4>Email: <%= @user.email %></h4>
        <h4>Address: <%= @user.address %></h4>
        <div><%= link_to "Edit Info", edit_user_path(@user)  %></div>
        <div><%= link_to "Your Dashboard", dashboard_path(@user)  %></div>
        <div><%= link_to "Orders", orders_path, class: "waves-effect waves-light btn-large" %></div>
        <div><%= link_to "Items", items_path, class: "waves-effect waves-light btn-large" %></div>
      </div>
    </div>
  </div>
</div>
