<h3> <% "Order: #{@order.id}" %> </h3>
<% @items.each do |item| %>
  <p> User name: <%= @order.user.name %> </p>
  <p> Price at sale: <%= item.price_at_sale %> </p>
  <p> Quantity Sold: <%= item.quantity_sold(@order.id) %> </p>
  <p> <%= link_to "#{item.name}", item_path(item) %> </p>
  <%= image_tag item.image %>
<% end %>
